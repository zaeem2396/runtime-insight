{
    "name": "clarityphp/runtime-insight",
    "description": "AI-Augmented PHP Runtime Error Analyzer & Explainer for Laravel and Symfony applications",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "runtime",
        "error",
        "exception",
        "analyzer",
        "explainer",
        "ai",
        "laravel",
        "symfony",
        "debugging",
        "developer-experience"
    ],
    "authors": [
        {
            "name": "ClarityPHP Team",
            "email": "hello@clarityphp.dev"
        }
    ],
    "homepage": "https://github.com/clarityphp/runtime-insight",
    "support": {
        "issues": "https://github.com/clarityphp/runtime-insight/issues",
        "source": "https://github.com/clarityphp/runtime-insight"
    },
    "require": {
        "php": "^8.5",
        "psr/log": "^3.0",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.50",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0",
        "symfony/framework-bundle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "ClarityPHP\\RuntimeInsight\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ClarityPHP\\RuntimeInsight\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ClarityPHP\\RuntimeInsight\\Laravel\\RuntimeInsightServiceProvider"
            ],
            "aliases": {
                "RuntimeInsight": "ClarityPHP\\RuntimeInsight\\Laravel\\Facades\\RuntimeInsight"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src --level=max",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix"
    }
}

